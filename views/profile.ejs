<!doctype html>
<html>
<head>
  <title>Demo Day Project</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Oswald&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <link rel="stylesheet" href="styleProfile.css">
</head>
<body>
  <div class="container">
    <div class="page-header text-center">
      <h1><span class="fa fa-flask"></span> Labs</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <h3>Lab List</h3>
        <ul class="reports">
          <% for(var i=0; i< reports.length; i++) {%>
          <% if (user.local.email == reports[i].username) { %> <!-- for all reports we have, only display the reports that were made by this user -->
          <li class="message">
            <span><%= reports[i].username%></span>
            <span><a href="/report/<%= reports[i]._id %>"><%= reports[i].labTitle %></a></span>
            <span><i id="<%= reports[i]._id %>" class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
          <% } %>
        </ul>
        <% if (user.local.email) { %>
        <form action="/reports" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="Lab Name" name="labTitle">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>
    </div>
    <script src="main.js"></script>
    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</body>
</html>
